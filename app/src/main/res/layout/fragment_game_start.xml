<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GameStart">

    <data>

        <variable
            name="game"
            type="com.hosam.askanswer.GameStart" />
    </data>

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="360dp"
                android:layout_height="169dp"
                app:layout_constraintBottom_toTopOf="@+id/question"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ask"
                />

            <TextView
                android:id="@+id/question"
                android:layout_width="351dp"
                android:layout_height="53dp"
                android:layout_margin="20dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="6dp"
                android:text="@{game.CurrentQuestion.text.toString()}"
                android:textColor="#000"
                android:textSize="18dp"

                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/radiogroupbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.266"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="first question" />

            <RadioGroup
                android:id="@+id/radiogroupbutton"
                android:layout_width="366dp"
                android:layout_height="165dp"
                android:layout_marginBottom="60dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.355"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{game.Answer[0]}"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{game.Answer[1]}" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{game.Answer[2]}" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{game.Answer[3]}" />
            </RadioGroup>

            <Button
                android:id="@+id/button"
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                android:text="Sumbit"
                android:textColor="#fff"
                android:textSize="22dp"
                android:background="@drawable/btnstyle"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>